<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_selector">

    <ImageView
        android:id="@+id/img_keywords"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:padding="16dp"
        android:scaleType="center"
        android:src="@drawable/ic_keywords_icon" />

    <TextView
        android:id="@+id/txt_keywords"
        style="style/AppTheme.TextViewSearchKeyword"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/img_keywords"
        android:layout_toRightOf="@id/img_keywords"
        android:gravity="center_vertical" />

    <ImageView
        android:id="@+id/img_delete_keywords"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="16dp"
        android:scaleType="center"
        android:src="@drawable/ic_delete" />

</RelativeLayout>